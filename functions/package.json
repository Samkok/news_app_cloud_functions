{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "fix": "npx eslint . --fix",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "NODE_ENV=uat firebase deploy --only functions",
    "deploy-firestore-rule": "NODE_ENV=uat firebase deploy --only firestore:rules",
    "local": "NODE_ENV=uat firebase serve --only functions",
    "local-all": "NODE_ENV=uat firebase serve",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "18"
  },
  "main": "lib/index.js",
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "firebase-admin": "^12.1.0",
    "firebase-functions": "^5.0.0"
  },
  "devDependencies": {
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.57.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-prettier": "^5.2.1",
    "firebase-functions-test": "^3.1.0",
    "prettier": "^3.3.3",
    "typescript": "^4.9.0"
  },
  "private": true
}
